{
	"name": "site-archive",
	"version": "2.2.3",
	"description": "Website capture tool written in TS using Puppeteer",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mirite/site-archive.git"
	},
	"license": "MIT",
	"author": "Jesse Conner <me@jesseconner.ca>",
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/types/index.d.ts",
				"default": "./dist/esm/index.mjs"
			},
			"require": {
				"types": "./dist/cjs/types/index.d.ts",
				"default": "./dist/cjs/index.js"
			}
		}
	},
	"types": "./dist/esm/types/index.d.ts",
	"files": [
		"dist/**/*"
	],
	"scripts": {
		"build": "yarn run clean && yarn run build:esm && yarn run build:cjs",
		"build:cjs": "tsc -p ./configs/tsconfig.cjs.json",
		"build:esm": "tsc -p ./configs/tsconfig.esm.json && move-file dist/esm/index.js dist/esm/index.mjs",
		"check": "tsc --noEmit",
		"clean": "del-cli ./dist",
		"format": "prettier . --write --cache",
		"lint": "eslint --fix --cache",
		"release": "yarn build && yarn npm publish",
		"test": "yarn build && node ./dist/test.js https://rootree.ca"
	},
	"dependencies": {
		"html-urls": "^2.4.66",
		"jsdom": "^26.1.0",
		"puppeteer": "^24.16.2",
		"tar": "^7.4.3",
		"typescript": "^5.9.2"
	},
	"devDependencies": {
		"@mirite/eslint-config-mirite": "^1.3.1",
		"@types/node": "^24.2.1",
		"@types/tar": "^6.1.13",
		"del-cli": "^6.0.0",
		"eslint": "^9.33.0",
		"move-file-cli": "^3.0.0",
		"prettier": "^3.6.2"
	},
	"packageManager": "yarn@4.9.2",
	"engines": {
		"node": ">=18.0.0"
	}
}
